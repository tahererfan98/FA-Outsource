@model IEnumerable<BombayToolsEntities.BusinessEntities.ActivityLog>
<style>

    ul.timeline {
        list-style-type: none;
        position: relative;
    }

        ul.timeline:before {
            content: ' ';
            background: #d4d9df;
            display: inline-block;
            position: absolute;
            left: 29px;
            width: 2px;
            height: 100%;
            z-index: 400;
        }

        ul.timeline > li {
            /*margin: 20px 0;
            padding-left: 20px;*/
        }

            ul.timeline > li:before {
                content: ' ';
                background: white;
                display: inline-block;
                position: absolute;
                border-radius: 50%;
                border: 3px solid #9F79FF;
                left: 20px;
                width: 20px;
                height: 20px;
                z-index: 400;
            }

    .temp_p {
        padding: 10px 39px 10px 39px !important;
        /*margin: 1px;*/
    }

</style>

<ul class="timeline">
    @foreach (var d in Model)
    {

            <li>
                <a style="margin-left:45px" href="#">@Html.DisplayFor(m => d.ActivityDesc)</a>
                <a href="#" class="float-right mr-2"><small>@Html.DisplayFor(m => d.AddedOn)</small> </a>
                <p class="temp_p">
                    <small>@Html.DisplayFor(m => d.AddedBy)</small> 
                </p>

            </li>
     

    }

</ul>