    function ChangeDate(Type) {
        if (Type == 1) {
            var d = new Date();
            var CurrentDate = d.getDate() + ' ' + d.toString().substr(4, 3) + ' ' + d.getFullYear();
            document.getElementById("fromDate").value = CurrentDate;
