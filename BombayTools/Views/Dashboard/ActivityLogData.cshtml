            var d = new Date();
            var CurrentDate = d.getDate() + ' ' + d.toString().substr(4, 3) + ' ' + d.getFullYear();
            document.getElementById("fromDate").value = Monday;
            document.getElementById("toDate").value = CurrentDate;

