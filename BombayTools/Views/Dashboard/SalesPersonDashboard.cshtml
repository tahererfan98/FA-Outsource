
@{
    ViewBag.Title = "SalesPersonDashboard";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<style>
    .carousel-control-prev-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23563D7C' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E");
    }

    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23563D7C' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E");
    }
    .slider_table  {
        font-size:16px; 
    }
</style>

<div class=" content-area" id="Dashboard">
    <div class="page-header">
        <h4 class="page-title">Dashboard</h4>
        
    </div>
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="card"> 
                    <div id="carousel-captions" class="carousel slide" data-ride="carousel" data-interval="false">
                        <div class="carousel-inner">
                            @foreach (var Data in ViewBag.ReportList)
                            {
                                if (Data.Index == 1)
                                {
                                    <div class="carousel-item active">
                                        <div style="width:100%;height:170px;"></div>
                                        <div class="carousel-item-background d-none d-md-block" style="background-color:#9F78FF ; border: 1px solid #36C6FE">
                                            <div class="row">
                                                <div class="col-sm-12 col-md-12">
                                                    <div class="float-left m-2">
                                                        <h4 class="ml-3 mb-0 text-white font-weight-bold"> @Data.FromDate - @Data.ToDate</h4>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="m-0" />
                                            <div class="row p-3">
                                                <div class="col-sm-12 offset-md-1 col-md-5">
                                                    <div class="float-left ml-3" style="width: 50%;">
                                                        <table style="width:100%">
                                                            <tbody>
                                                                <tr>
                                                                    <th class="text-white slider_table">Enquiries :</th>
                                                                    <th class="text-white float-right slider_table">@Data.EnqTotal</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Open :</th>
                                                                    <th class="text-white float-right slider_table">@Data.EnqOpen</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Close :</th>
                                                                    <th class="text-white float-right slider_table">@Data.EnqClose</th>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 col-md-6 ">
                                                    <div class="float-left" style="width: 50%;">
                                                        <table style="width:100%">
                                                            <tbody>
                                                                <tr>
                                                                    <th class="text-white slider_table">Quotation :</th>
                                                                    <th class="text-white float-right slider_table">@Data.QuotTotal</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Open :</th>
                                                                    <th class="text-white float-right slider_table">@Data.QuotOpen</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Close :</th>
                                                                    <th class="text-white float-right slider_table">@Data.QuotClose</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Amount :</th>
                                                                    <th class="text-white float-right slider_table">@Data.Amount</th>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <div style="width:100%;height:170px;"></div>
                                        <div class="carousel-item-background d-none d-md-block" style="background-color:#9F78FF ; border: 1px solid #36C6FE">
                                            <div class="row">
                                                <div class="col-sm-12 col-md-12">
                                                    <div class="float-left m-2">
                                                        <h4 class="ml-3 mb-0 text-white font-weight-bold"> @Data.FromDate - @Data.ToDate</h4>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="m-0" />
                                            <div class="row p-3">
                                                <div class="col-sm-12 offset-md-1 col-md-5">
                                                    <div class="float-left ml-3" style="width: 70%;">
                                                        <table style="width:100%">
                                                            <tbody>
                                                                <tr>
                                                                    <th class="text-white slider_table">Enquiries :</th>
                                                                    <th class="text-white float-right slider_table">@Data.EnqTotal</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Open :</th>
                                                                    <th class="text-white float-right slider_table">@Data.EnqOpen</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Close :</th>
                                                                    <th class="text-white float-right slider_table">@Data.EnqClose</th>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 col-md-6 ">
                                                    <div class="" style="width: 50%;">
                                                        <table style="width:100%">
                                                            <tbody>
                                                                <tr>
                                                                    <th class="text-white slider_table">Quotation :</th>
                                                                    <th class="text-white float-right slider_table">@Data.QuotTotal</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Open :</th>
                                                                    <th class="text-white float-right slider_table">@Data.QuotOpen</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Close :</th>
                                                                    <th class="text-white float-right slider_table">@Data.QuotClose</th>
                                                                </tr>
                                                                <tr>
                                                                    <th class="text-white slider_table">Amount :</th>
                                                                    <th class="text-white float-right slider_table">@Data.Amount</th>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            }
                        </div>
                        <a class="carousel-control-prev" href="#carousel-captions" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-captions" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-lg-12 card">
            <h5 class="mb-0 mt-2">Last 10 Open Enquiries</h5>
            <div class="table-responsive">
                <table id="tblEnquiry" class="table table-striped table-bordered compact" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width: 1px!important"></th>
                            <th >Enquiry No</th>
                            <th>Date</th>
                            <th>Company</th>
                            <th>Sales Cordinator</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var list in ViewBag.Enqlist)
                        {
                            <tr>
                                <th>
                                    <button class="btn btn-info btn-sm"><i class="fa fa-eye"></i></button>
                                </th>
                                <td>@list.EnqNO</td>
                                <td>@list.DisplayDate</td>
                                <td>@list.Company</td>
                                <td>@list.SalesCoordinatorName</td>
                                <td>@list.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-12 col-lg-12 card">
            <h5 class="mb-0 mt-2">Last 10 Quotation</h5>
            <div class="table-responsive">
                <table id="tblQuotation" class="table table-striped table-bordered compact" style="width:100%">
                    <thead>
                        <tr>
                            <th style="width: 1px!important"></th>
                            <th>Quot No</th>
                            <th>Date</th>
                            <th>Company</th>
                            <th>Sales Cordinator</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var list in ViewBag.QuotList)
                        {
                            <tr>
                                <th>
                                    <button class="btn btn-info btn-sm"><i class="fa fa-eye"></i></button>
                                </th>
                                <td>@list.QuotID</td>
                                <td>@list.QuotCreated</td>
                                <td>@list.Company</td>
                                <td>@list.SalesCoordinatorName</td>
                                <td>@list.Total</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {        $('#tblEnquiry').DataTable({            "bLengthChange": false,            "bInfo": false,            "bPaginate": false,            "bFilter": false,            "paging": false,            "aaSorting": [],            "columnDefs": [{
                "targets": 0,
                "orderable": false
            }]        });        $('#tblQuotation').DataTable({            "bLengthChange": false,            "bInfo": false,            "bPaginate": false,            "bFilter": false,            "paging": false,            "aaSorting": [],            "columnDefs": [{
                "targets": 0,
                "orderable": false
            }]        });    });

 
</script>