                icon: 'error'
            })
            return false;

        } else {
            document.getElementById('toDate').style.borderColor = "Gainsboro";
        }

        var data = { 'startDate': FromDate, 'endDate': ToDate, 'SearchCriteria': SearchCriteria, 'Search': Search };
        data = JSON.stringify(data);
        $("#global-loader").fadeIn("slow");

