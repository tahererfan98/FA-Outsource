@model BombayToolsEntities.BusinessEntities.UserDetail

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="login-img">
    <div class="page">
        @using (Html.BeginForm("RequestRestPassword", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="page-single">
                <div class="container">
                    <div class="row">
                        <div class="col mx-auto">
                            <div class="text-center mb-6">
                                @*<img src="~/images/loginpagelogo.png" class="" alt="">*@
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="card-group mb-0">
                                        <div class="card p-4">
                                            <div class="card-body">
                                                <h1>Forgot password</h1>
                                                <span class="text-danger" id="usernameinvalid">@Html.DisplayFor(model => model.LoginErrorMessage)</span>
                                                <div class="input-group mb-4">
                                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                                    @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", @id = "textEmailID", name = "textEmailID", placeholder = "EmailID", autocomplete = "off" } })
                                                    <div class="invalid-feedback" style="display:none" id="userrequired">Email ID is required</div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <button type="submit" id="RequestRestPassword" name="RequestRestPassword" value="RequestRestPassword" class="btn btn-primary btn-block">Send</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="card text-white bg-primary py-5 d-md-down-none login-transparent">
                                            <div class="card-body text-center justify-content-center ">
                                                <div class="text-center mb-6">
                                                    @*<img src="~/images/Bombay_Tools_LOGO_black.png" type="image/x-icon" class="" alt="Bombay_Tools" style="max-width:50%">*@
                                                    <img src="~/images/btc/glassPro_500px_PNG.png" type="image/x-icon" class="header-brand-img" alt="FG"  style="max-width:100%; max-height:100%"/>
                                                    @*<link rel="shortcut icon" type="image/x-icon" href="~/images/Bombay_Tools_LOGO_black.png" />*@
                                                </div>
                                                <p>A password reset link will be sent to you on regeisterd Email ID</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#RequestRestPassword').click(function () {
                var username = document.getElementById('textEmailID').value;


                if (username == "") {
                    $('#textEmailID').addClass('is-invalid state-invalid');
                    $('#userrequired').show();
                    document.getElementById("usernameinvalid").style.visibility = "hidden";
                    event.preventDefault();
                }




            });
            //$('#btnRemoveCSS').click(function () {
            //    $('#divsample').removeClass('divclass')
            //});
        })
    </script>
</body>
