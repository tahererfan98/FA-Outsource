@model BombayToolsEntities.BusinessEntities.UserDetail
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="login-img">
    @if (ViewBag.Status != 0)
    {
        <div class="page">
            @using (Html.BeginForm("AjaxSetNewPassword", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="page-single">
                    <div class="container">
                        <div class="row">
                            <div class="col mx-auto">
                                <div class="text-center mb-6">
                                    @*<img src="~/images/loginpagelogo.png" class="" alt="">*@
                                </div>
                                <div class="row justify-content-center">
                                    <div class="col-md-8">
                                        <div class="card-group mb-0">
                                            <div class="card p-4">
                                                <div class="card-body">
                                                    <h1>Reset password</h1>
                                                    <span class="text-danger" id="usernameinvalid">@Html.DisplayFor(model => model.LoginErrorMessage)</span>
                                                    <div class="form-group" style="display:none">
                                                        @Html.EditorFor(model => model.Token, new { htmlAttributes = new { @class = "form-control", @id = "Token", name = "Token", placeholder = "Token", autocomplete = "off", type = "password" } })
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="form-label">New Password</label>
                                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "txtpasswordAuth", name = "password", placeholder = "Password", autocomplete = "off", type = "password" } })
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="form-label">Re-Enter Password</label>
                                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "txtpasswordAuth2", name = "password", placeholder = "Password", autocomplete = "off", type = "password" } })
                                                    </div>
                                                    <div class="invalid-feedback" style="display:none" id="ErrorText">Invalid Data: Password didn't matched</div>
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <button type="submit" id="RequestRestPassword" name="RequestRestPassword" value="RequestRestPassword" class="btn btn-primary btn-block">Send</button>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            @*<div class="card text-white bg-primary py-5 d-md-down-none login-transparent">
                                                    <div class="card-body text-center justify-content-center ">
                                                        <div class="text-center mb-6">
                                                            <img src="~/assets/images/ipcl.logo.png" class="" alt="ipcl">
                                                        </div>
                                                        <p>A password reset link will be sent to you on regeisterd Email ID</p>
                                                    </div>
                                                </div>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="page">
            <div class="page-single">
                <div class="container">
                    <div class="row">
                        <div class="col mx-auto">
                            <div class="text-center mb-6">
                                @*<img src="~/images/loginpagelogo.png" class="" alt="">*@
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="card-group mb-0">
                                        <div class="card p-4">
                                            <div class="card-body">
                                                <h1>@ViewBag.Message</h1>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }


    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        @*document.getElementById("Token").value=@ViewBag.Token;*@
        $(function () {
            $('#RequestRestPassword').click(function () {
                var pwd1 = document.getElementById('txtpasswordAuth').value;
                var pwd2 = document.getElementById('txtpasswordAuth2').value;


                if (pwd1 == "") {
                    $('#txtpasswordAuth').addClass('is-invalid state-invalid');
                    event.preventDefault();
                }

                if (pwd2 == "") {
                    $('#txtpasswordAuth2').addClass('is-invalid state-invalid');
                    event.preventDefault();
                }

                if (pwd1 != pwd2) {
                    $("#ErrorText").show();
                    event.preventDefault();

                }




            });
            //$('#btnRemoveCSS').click(function () {
            //    $('#divsample').removeClass('divclass')
            //});
        })
    </script>
</body>
