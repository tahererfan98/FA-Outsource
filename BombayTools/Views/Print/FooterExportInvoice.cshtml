<html>
<head>

    <style>
        pre {
            color: white;
            padding: 0;
            overflow: auto;
            font-size: 85%;
            line-height: 1.45;
            border-left: none;
            background-color: white;
            border-radius: 3px;
            -moz-tab-size: 4;
            -o-tab-size: 4;
            tab-size: 4;
            text-shadow: 0 1px white;
            -webkit-hyphens: none;
            -moz-hyphens: none;
            -ms-hyphens: none;
            hyphens: none;
        }
        .vl {
            border-left: 3px solid black;
            height: 90px;
        }

        .print td {
            padding: 0.15rem !important;
        }

        .m-0 {
            margin-top: 0 !important;
            margin-bottom: 0 !important;
        }

        .p-0 {
            padding-top: 0 !important;
            padding-bottom: 0 !important;
        }

        .cell {
            padding: 0.15rem !important;
        }

        th, tr, td {
            padding: 0px;
        }

        #text-big {
            font-size: 12px;
            font-weight: 900;
        }

        #text-small {
            font-size: 12px;
            font-weight: 500;
        }

        #text-med {
            font-size: 16px;
            font-weight: 700;
        }

        #text-num {
            font-size: 18px;
            font-weight: 800;
        }

        #Systemdiv {
            page-break-before: always;
        }

        #displayTable {
            font-weight: 900;
        }

        #PrintStyle {
            font-size: 12px;
            font-weight: bolder;
        }

        #tablebreak {
            page-break-inside: avoid;
            page-break-before: avoid;
        }

        #tablebreakrow {
            page-break-inside: avoid;
            page-break-after: avoid;
            page-break-before: auto;
        }
    </style>
    <style>
        #btnJCBack {
            background-color: black;
            border-color: black;
        }

        #center {
            text-align: center;
            border-bottom: none;
        }

        #right {
            text-align: right;
            border-bottom: none;
        }

        #left {
            text-align: left;
            border-bottom: none;
        }
        /*.table thead th, .text-wrap table thead th {
            vertical-align: bottom;
