
@{
    ViewBag.Title = "EnquiryReceiveSummary";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<style>
    pre {
        color: white;
        padding: 0;
        overflow: auto;
        font-size: 85%;
        line-height: 1.45;
        border-left: none;
        background-color: white;
        border-radius: 3px;
        /*        -moz-tab-size: 4;
    */ -o-tab-size: 4;
        tab-size: 4;
        text-shadow: 0 1px white;
        -webkit-hyphens: none;
        -moz-hyphens: none;
        -ms-hyphens: none;
        hyphens: none;
    }

    .isSavedAsDraft_1 {
        background-color: #ffb2b6;
    }
    #tblPOSummary th,
    #tblPOSummary td {
        height: 0.7rem;
        padding: 5px;
        vertical-align: middle;
        line-height: 1.5 !important;
